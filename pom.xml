<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.fasterxml</groupId>
    <artifactId>oss-parent</artifactId>
    <version>11</version>
  </parent>

  <groupId>com.fasterxml.jackson.simple</groupId>
  <artifactId>jackson-simple-objects</artifactId>
  <version>2.3.0-SNAPSHOT</version>
  <name>jackson-simple-objects</name>
  <packaging>bundle</packaging>
  <description>Naive/simple/light-weight data-binding that aims to minimize size of the jar
by only providing simplest of data-binding capabilities; but still use modular design to
play nice with other Jackson components. Builds directly on `jackson-core` (streaming),
has no other dependencies.
</description>
  <url>http://wiki.fasterxml.com/JacksonHome</url>

  <scm>
    <connection>scm:git:git@github.com:FasterXML/jackson-simple-objects.git</connection>
    <developerConnection>scm:git:git@github.com:FasterXML/jackson-simple-objects.git</developerConnection>
    <url>http://github.com/FasterXML/jackson-simple-objects</url>
    <tag>HEAD</tag>
  </scm>

  <properties>
    <osgi.export>
com.fasterxml.jackson.simple.ob,
com.fasterxml.jackson.simple.ob.impl
    </osgi.export>
    <osgi.import>
com.fasterxml.jackson.core,
com.fasterxml.jackson.core.json,
com.fasterxml.jackson.core.io,
com.fasterxml.jackson.core.util,
com.fasterxml.jackson.core.type,
</osgi.import>

    <!-- Generate PackageVersion.java into this directory. -->
    <packageVersion.dir>com/fasterxml/jackson/simple/ob</packageVersion.dir>
    <packageVersion.package>com.fasterxml.jackson.simple.ob</packageVersion.package>
  </properties>

  <dependencies>
    <!-- Builds on core streaming API -->
    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-core</artifactId>
      <version>2.3.0-SNAPSHOT</version>
    </dependency>

    <!-- and for testing, JUnit is needed -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>${javadoc.version}</version>
        <configuration>
          <links>
            <link>http://docs.oracle.com/javase/6/docs/api/</link>
            <link>http://fasterxml.github.com/jackson-core/javadoc/2.2.0/</link>
          </links>
        </configuration>
      </plugin>
      <plugin>
        <!-- Inherited from oss-base. Generate PackageVersion.java.-->
        <groupId>com.google.code.maven-replacer-plugin</groupId>
        <artifactId>replacer</artifactId>
        <executions>
          <execution>
            <id>process-packageVersion</id>
            <phase>process-sources</phase>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
